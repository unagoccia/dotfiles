# Set the Prezto modules to load (browse modules).
# The order matters.
zstyle ':prezto:load' pmodule \
  'environment' \
  'terminal' \
  'editor' \
  'history' \
  'directory' \
  'spectrum' \
  'utility' \
  'completion' \
  'git' \
  'homebrew' \
  'svn' \
  'works' \
  'proxy' \
  'java' \
  'gvm' \
  'wine' \
  'docker' \
  'prompt' \
  'peco' \
  'vmware-fusion'


